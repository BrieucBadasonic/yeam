<div class="binome-card">
  <%= simple_form_for @binome do |f| %>
    <div class="mt-3">
      <%= f.association :user, label_method: :full_name, prompt: "Select an admin", label: false %>
    </div>
    <div class="mt-3">
      <%= f.association :benevole, label_method: :full_name, prompt: "Select a benevole", label: false %>
    </div>
    <div class="mt-3">
      <%= f.association :client, label_method: :full_name,  prompt: "Select a client", label: false %>
    </div>
    <div class="mt-3">
      <%= f.input :request_status, prompt: "Select a request status", collection: Binome::REQUEST_STATUS, label: false %>
    </div>
    <div class="mt-3">
      <%= f.input :to_do, placeholder: "To Do", label: false %>
    </div>
    <div class="mt-3">
      <%= f.input :status, as: :text, placeholder: "Sitation actuelle", label: false %>
    </div>
    <div class="mt-3">
      <%= f.input :connection_date, as: :string, required: false, label: "Date de mise en relation", input_html: {class: "datepicker"} %>
    </div>
    <div class="mt-3">
      <%= f.submit class:"btn btn-warning"%>
    </div>
  <% end %>
</div>
